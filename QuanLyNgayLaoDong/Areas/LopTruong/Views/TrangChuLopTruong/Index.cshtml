<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/trangchu/CSS/SinhVien.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/Admin/css/layout.css")">
    <link href="~/Content/sinhvien/CSS/LayoutSinhVien.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Javascript/AdminshareJavaScript.js"></script>
    <title>Trang Chủ Sinh Viên</title>
</head>

<body>
    <nav>
        <div class="nav-content">
            <a href="TrangChu">
                <img src="~/Content/trangchu/images/imageLayout/LogoTruong.png" alt="Logo" class="logo">
            </a>
            <div class="nav-content-text">Lớp Trưởng</div>
            <div class="user-menu" id="userMenu">
                <img src="@Url.Content(Model.AnhDaiDien)" alt="User Avatar" class="user-avatar" />
                <label class="user-name">@Model.HoTen</label>
                <i class="fa fa-caret-down"></i>
                <ul class="dropdown-menu" id="dropdownMenu">
                    <li><a class="a-color" href="@Url.Action("TrangThongTinLopTruong", "TrangChuLopTruong")">Thông tin cá nhân</a></li>
                    <li><a class="a-color" href="#">Đổi mật khẩu</a></li>
                    <li><a class="a-color" href="javascript:void(0);" onclick="openModal()">Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm p-3 mb-4">
                    <h4 class="text-danger fw-bold">Thông Tin Sinh Viên</h4>
                    <div class="text-center">
                        <img src="@Url.Content(Model.AnhDaiDien)" class="img-fluid rounded-circle" width="120" alt="Avatar" />
                        <div class="mt-2">
                            <a href="@Url.Action("TrangThongTinLopTruong", "TrangChuLopTruong")" class="text-primary">Xem chi tiết</a>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush mt-3">
                        <li class="list-group-item"><strong>MSQL:</strong> @Model.MSSV</li>
                        <li class="list-group-item"><strong>Họ và Tên:</strong> @Model.HoTen</li>
                        <li class="list-group-item"><strong>Giới tính:</strong> @Model.GioiTinh</li>
                        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                        <li class="list-group-item"><strong>Vai trò:</strong> @Model.VaiTro</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-4">
                        <a href="/TrangChuLopTruong/PhieuDangKy" class="text-decoration-none">
                            <div class="card shadow-sm text-center p-3 text-white mb-4">
                                <h6 class="Text-h6">Đăng Ký Lao Động</h6>
                                <img src="~/Content/trangchu/images/imageLayout/Create.png" class="img-Laodong" width="120">
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/TrangChuLopTruong/ThongKe" class="text-decoration-none">
                            <div class="card shadow-sm text-center p-3 text-white mb-4">
                                <h6 class="Text-h6">Thống Kê</h6>
                                <img src="~/Content/trangchu/images/imageLayout/Thongke.png" class="img-Laodong" width="120">
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/TrangChuLopTruong/LichLaoDong" class="text-decoration-none">
                            <div class="card shadow-sm text-center p-3 text-white mb-4">
                                <h6 class="Text-h6">Lịch Lao Động</h6>
                                <img src="~/Content/trangchu/images/imageLayout/icons8-calendar.gif" class="img-Laodong" width="120">
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <a href="/TrangChuLopTruong/DiemDanh" class="text-decoration-none">
                            <div class="card shadow-sm text-center p-3 mb-4">
                                <h6>Điểm Danh Lao Động </h6>
                                <img src="~/Content/trangchu/images/imageLayout/Duyet1.png" class="img-Laodong" width="120">
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/TrangChuLopTruong/ThongBao" class="text-decoration-none">
                            <div class="card shadow-sm text-center p-3 mb-4">
                                <h6>Thông Báo</h6>
                                <img src="~/Content/trangchu/images/imageLayout/icons8-bell.gif" class="img-Laodong" width="120">
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('userMenu').addEventListener('click', function (event) {
            event.stopPropagation();
            document.getElementById('dropdownMenu').classList.toggle('show');
        });
        document.addEventListener('click', function (event) {
            if (!document.getElementById('userMenu').contains(event.target)) {
                document.getElementById('dropdownMenu').classList.remove('show');
            }
        });
    </script>
    <script>
        function openModal() {
            document.getElementById("confirmationModal").style.display = "block";
        }
        function openModal() {
            document.getElementById("confirmationModal").style.display = "flex";
        }

        function closeModal() {
            document.getElementById("confirmationModal").style.display = "none";
        }

        // Bấm ra ngoài thì đóng modal
        window.onclick = function (event) {
            var modal = document.getElementById("confirmationModal");
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };
    </script>
    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <div class="modal-text">
                <p>Bạn có chắc chắn muốn đăng xuất?</p>
                <div class="modal-buttons">
                    <!-- Truyền URL từ Razor vào attribute -->
                    <button class="btn-xoa" onclick="window.location.href='@Url.Action("Login", "Login", new { area = "" })'">Có</button>
                    <button class="btn-huy" onclick="closeModal()">Hủy</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
